<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Wale Eseyin, Empath. Software Engineer. Horologist.">
    <title>Contact Index</title>
    <!--link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous"-->
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <!-- Optional theme -->
    <!--link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous"-->
    <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
    <style>
      #edit {
        display: none;
      }
    </style>
  </head>

  <div class="nav-list">
    <a href="/">Back to Contacts List</a>
  </div>

  <div class="row page-header">
    <h3>Contact Details</h3>
  </div>
  <div id="contact-detail" class="row thumbnail">
    <h5>{{contact.name.full}}</h5>
    <dl>
      <dt>First Name</dt>
      <dd id="view">{{contact.name.first}}</dd>
      <dd id="edit"><input type="text" id="first" value="{{contact.name.first}}"></dd>
      <br>
      <dt>Last Name</dt>
      <dd id="view">{{contact.name.last}}</dd>
      <dd id="edit"><input type="text" id="last" value="{{contact.name.last}}"></dd>
      <br>
      <dt>E-Mail</dt>
      <dd id="view">{{contact.email}}</dd>
      <dd id="edit"><input type="text" id="email" value="{{contact.email}}"></dd>
      <br>
      <dt>Address</dt>
      <dd id="view">{{contact.address}}</dd>
      <dd id="edit"><input type="text" id="address" value="{{contact.address}}"></dd>
      <br>
      <dd id="edit">
        <input type="submit" value="Save" onclick="save()">
        <input type="submit" value="Cancel" onclick="cancel()">
      </dd>
    </dl>
  </div>
  <p>
    <a href="#" class="btn btn-primary" role="button" onclick="edit()"><i class="fa fa-pencil fa-fw"></i>&nbsp; Edit</a>
    <a href="#" class="btn btn-danger" role="button" onclick="del()"><i class="fa fa-trash-o fa-fw"></i>&nbsp; Delete</a>
  </p>

<script   src="https://code.jquery.com/jquery-3.1.0.js"   integrity="sha256-slogkvB1K3VOkzAI8QITxV3VzpOnkeNVsKvtkYLMjfk="   crossorigin="anonymous"></script>
<script>
  function edit() {
    $('#view').hide()
    $('#edit').show()
  }

  function cancel() {
    $('#view').show()
    $('#edit').hide()
  }

  function save() {
    $.ajax('/{{contact._id}}', {
      method: 'PUT',
      data: {
        name.first: $('#first').val(),
        name.last: $('#last').val(),
        email: $('#email').val(),
        address: $('#address').val()
      },
      complete: function() {
        cancel()
        location.reload()
      }
    })
  }

  function del() {
    $.ajax('/{{contact._id}}', {
      method: 'DELETE',
      complete: function() {
        location = '/'
      }
    })
  }
</script>
</body>
</html>
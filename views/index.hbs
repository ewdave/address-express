    <div class="row">
      <div class="col-sm-6">
        <div class="jumbotron">
          <h3><span class="label label-default">Address Book</span></h3>
          {{#each contacts as |contact|}}
          <div class="list-group">
            <a href="/contacts/{{contact._id}}" class="list-group-item">
              <h5 class="list-group-item-heading">contact.name.first</h5>
              <p class="list-group-item-text">contact.mobile</p>
            </a>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="col-sm-6">
        <div class="row">
          <h3>Contact Details</h3>
        </div>
        <div class="row">
          <span>Name</span>
          <span>E-Mail</span>
          <span>Mobile</span>
          <span>Location</span>
        </div>
        </div>
    </div>
    

